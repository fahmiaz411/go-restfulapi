          "200": {
            "description": "Success get all categories",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                }
              }
            }
          }
        }
      },
      "post": {
        "security": [
          {
            "CategoryAuth": []
          }
