        "tags": ["Category API"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOrUpdateCategory"
              }
            }
          }
        },
        "summary": "Create category",
        "responses": {
          "200": {
            "description": "Success create category",
